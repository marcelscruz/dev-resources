{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "lib": ["es2021"],
        "types": ["node"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "incremental": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "baseUrl": ".",
        "rootDir": ".",
        "paths": {
            "const": ["const"],
            "const/*": ["const/*"],
            "resources": ["./resources"],
            "resources/*": ["./resources/*"],
            "types": ["./types"],
            "types/*": ["./types/*"],
            "utils": ["./utils"],
            "utils/*": ["./utils/*"]
        },
        "plugins": [
            {
                "transform": "typescript-transform-paths"
            }
        ]
    },
    "ts-node": {
        "transpileOnly": true,
        "require": ["tsconfig-paths/register"]
    },
    "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
    "exclude": ["node_modules"]
}
